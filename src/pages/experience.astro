---
import SiteLayout from "../layouts/SiteLayout.astro";
import { experience } from "../data/experience";
---

<SiteLayout title="Experience — Alan Palayil" description="Professional experience and impact.">
  <h1>Experience</h1>
  <p class="sub">Impact-focused timeline (what shipped, what improved, what you can trust me with).</p>

  <div class="timeline">
    {experience.map((e) => (
      <section class="item">
        <div class="meta">
          <h2>{e.title}</h2>
          <div class="org">{e.org} • {e.location} • <span class="dates">{e.dates}</span></div>
        </div>

        <ul>
          {e.bullets.map((b) => <li>{b}</li>)}
        </ul>

        <div class="stack">
          {e.stack.map((s) => <span class="tag">{s}</span>)}
        </div>
      </section>
    ))}
  </div>

  <style>
    h1 { margin: 0 0 8px; font-size: 32px; }
    .sub { margin: 0 0 18px; color: var(--muted); line-height: 1.6; }

    .timeline { display:flex; flex-direction: column; gap: 14px; }
    .item { border: 1px solid var(--border); background: rgba(255,255,255,0.02); border-radius: 16px; padding: 14px; }
    h2 { margin: 0 0 6px; font-size: 16px; }
    .org { color: var(--muted); font-size: 13px; }
    .dates { color: var(--text); opacity: 0.9; }

    ul { margin: 12px 0 12px; padding-left: 18px; color: var(--muted); }
    li { margin: 7px 0; line-height: 1.5; }

    .stack { display:flex; gap: 8px; flex-wrap: wrap; }
    .tag { border: 1px solid var(--border); color: var(--muted); padding: 6px 10px; border-radius: 999px; font-size: 13px; }
  </style>
</SiteLayout>
