---
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="Resume — Alan Palayil" description="Resume PDF and quick highlights.">
  <h1>Resume</h1>
  <p class="sub">
    <a class="link" href="/resume.pdf" target="_blank" rel="noreferrer">Open resume PDF →</a>
  </p>

  <div class="frame">
    <iframe src="/Alan Palayil Resume 2025 (Detailed).pdf" title="Resume PDF"></iframe>
  </div>

  <style>
    h1 { margin: 0 0 8px; font-size: 32px; }
    .sub { margin: 0 0 14px; color: var(--muted); }
    .link { color: var(--accent); }
    .frame { border: 1px solid var(--border); border-radius: 16px; overflow: hidden; background: rgba(255,255,255,0.02); }
    iframe { width: 100%; height: 78vh; border: 0; }
  </style>
</SiteLayout>
