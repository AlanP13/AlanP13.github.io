---
import SiteLayout from "../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";

const projects = (await getCollection("projects"))
  .filter((p) => p.data.featured)
  .slice(0, 3);
---

<SiteLayout
  title="Alan Palayil"
  description="Enterprise data + platform modernization in financial systems."
>
  <section class="hero">
    <p class="kicker">Enterprise Data Engineer • Financial Systems • Cloud Platforms</p>
    <h1>Hello! I’m Alan Palayil.</h1>

    <p class="lead">
      I’m an <strong>Application Development Analyst</strong> at <strong>Genworth Financial</strong>, modernizing
      <strong> investment accounting systems</strong> by building reliable <strong>Azure-based data pipelines</strong>,
      improving operational resilience, and enabling cloud transformation at scale.
    </p>

    <p class="sub">
      Open to conversations on enterprise cloud migration, financial systems modernization, and large-scale data workflows.
    </p>

    <div class="socialRow" aria-label="Social links">
      <a class="social" href="https://github.com/AlanP13" target="_blank" rel="noreferrer">
        <span class="icon" aria-hidden="true">
          <!-- GitHub icon -->
          <svg viewBox="0 0 24 24" width="18" height="18">
            <path
              fill="currentColor"
              d="M12 2C6.48 2 2 6.58 2 12.26c0 4.5 2.87 8.31 6.84 9.66.5.1.68-.22.68-.48 0-.24-.01-.88-.01-1.73-2.78.62-3.37-1.38-3.37-1.38-.46-1.2-1.11-1.52-1.11-1.52-.91-.65.07-.64.07-.64 1 .07 1.53 1.06 1.53 1.06.9 1.58 2.36 1.12 2.94.86.09-.67.35-1.12.63-1.38-2.22-.26-4.56-1.14-4.56-5.09 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.32.1-2.75 0 0 .84-.27 2.75 1.05A9.3 9.3 0 0 1 12 6.84c.85 0 1.71.12 2.51.35 1.9-1.32 2.74-1.05 2.74-1.05.55 1.43.2 2.49.1 2.75.64.72 1.03 1.63 1.03 2.75 0 3.96-2.34 4.82-4.57 5.08.36.32.68.96.68 1.93 0 1.39-.01 2.52-.01 2.86 0 .27.18.59.69.48A10.06 10.06 0 0 0 22 12.26C22 6.58 17.52 2 12 2Z"
            />
          </svg>
        </span>
        GitHub
      </a>

      <span class="sep" aria-hidden="true">|</span>

      <a class="social" href="https://www.linkedin.com/in/alan-palayil/" target="_blank" rel="noreferrer">
        <span class="icon" aria-hidden="true">
          <!-- LinkedIn icon -->
          <svg viewBox="0 0 24 24" width="18" height="18">
            <path
              fill="currentColor"
              d="M20.45 20.45h-3.55v-5.57c0-1.33-.03-3.04-1.86-3.04-1.86 0-2.14 1.45-2.14 2.95v5.66H9.35V9h3.41v1.56h.05c.47-.9 1.62-1.86 3.33-1.86 3.56 0 4.22 2.35 4.22 5.41v6.34ZM5.34 7.43a2.06 2.06 0 1 1 0-4.12 2.06 2.06 0 0 1 0 4.12ZM7.12 20.45H3.56V9h3.56v11.45Z"
            />
          </svg>
        </span>
        LinkedIn
      </a>

      <span class="sep" aria-hidden="true">|</span>
      <a class="social" href="mailto:alan.palayil@gmail.com" target="_blank" rel="noreferrer">
        <span class="icon" aria-hidden="true">
          <!-- Email icon -->
          <svg viewBox="0 0 24 24" width="18" height="18">
            <path
              fill="currentColor"
              d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2Zm0 4.2-8 5.33L4 8.2V6l8 5.33L20 6v2.2Z"
            />
          </svg>

        </span>
        Email
      </a>

      <span class="sep" aria-hidden="true">|</span>

      <a class="social more" href="/about">
        More about me <span aria-hidden="true">→</span>
      </a>
    </div>
  </section>

  <section class="block">
    <h2>Featured Projects</h2>
    <p class="muted">Selected work with production ownership and measurable impact.</p>

    <div class="grid">
      {projects.map((p) => (
        <a class="card" href={`/projects/${p.slug}`}>
          <h3>{p.data.title}</h3>
          <p class="muted">{p.data.summary}</p>
          <div class="meta">
            <span class="pill">Read case study →</span>
            <span class="tech">{p.data.tech.slice(0, 4).join(" · ")}</span>
          </div>
        </a>
      ))}
    </div>

    <p class="allProjects">
      <a href="/projects">View all projects →</a>
    </p>
  </section>

  <section class="block">
    <h2>Work & Education</h2>
    <div class="timeline">
      <div class="item">
        <div class="when">Dec 2025 – Present</div>
        <div class="what">
          <h3>Application Development Analyst (P2) — Genworth Financial</h3>
          <p class="muted">Platform ownership, cloud modernization, data workflows across fixed income, CML, and derivatives.</p>
        </div>
      </div>

      <div class="item">
        <div class="when">Jul 2023 – Dec 2025</div>
        <div class="what">
          <h3>Associate Application Development Analyst (P1) — Genworth Financial</h3>
          <p class="muted">Automations, reporting, interfaces, and production support for investment accounting platforms.</p>
        </div>
      </div>

      <div class="divider"></div>

      <div class="item">
        <div class="when">PhD (in progress)</div>
        <div class="what">
          <h3>PhD in Information Technology — AI & Data Science focus</h3>
          <p class="muted">Applied research interests in intelligent automation and data-driven systems.</p>
        </div>
      </div>

      <div class="item">
        <div class="when">2023</div>
        <div class="what">
          <h3>M.S. Cybersecurity Engineering — Illinois Institute of Technology</h3>
        </div>
      </div>

      <div class="item">
        <div class="when">2023</div>
        <div class="what">
          <h3>B.S. Computer & Cybersecurity Engineering — Illinois Institute of Technology</h3>
        </div>
      </div>
    </div>
  </section>

  <section class="block">
    <h2>Technical Skills</h2>
    <div class="skills">
      <div class="s">
        <h3>Data Engineering & Pipelines</h3>
        <ul>
          <li>ETL pipeline design and orchestration</li>
          <li>Data transformation, validation, and reconciliation</li>
          <li>Accounting message generation and journal workflows</li>
          <li>Daily batch processing in regulated environments</li>
        </ul>
      </div>

      <div class="s">
        <h3>Cloud & Data Platforms</h3>
        <ul>
          <li>Azure Synapse Analytics (dedicated & serverless)</li>
          <li>Azure monitoring for reliability and operations</li>
          <li>PostgreSQL and relational data modeling</li>
          <li>Enterprise scheduling and job orchestration</li>
        </ul>
      </div>

      <div class="s">
        <h3>Languages & Tooling</h3>
        <ul>
          <li>Python (processing, automation, validation)</li>
          <li>SQL (reconciliation, performance tuning)</li>
          <li>Git (collaboration, version control)</li>
        </ul>
      </div>

      <div class="s">
        <h3>Enterprise Systems & Integration</h3>
        <ul>
          <li>PAM accounting platforms</li>
          <li>Markit EDM and enterprise ETL workflows</li>
          <li>AppWorx scheduling and dependency management</li>
          <li>Vendor migrations and platform ownership</li>
        </ul>
      </div>
    </div>
  </section>

  <style>
    /* HERO */
    .hero {
      padding-top: 28px;     /* after the big main padding, Jason still has a bit more */
      padding-bottom: 12px;
    }

    .kicker {
      color: rgb(var(--muted));
      margin: 0 0 18px;
      font-size: 14px;
    }

    .hero h1 {
      margin: 0 0 18px;
      font-size: 56px;       /* Jason headline is big */
      line-height: 1.02;
      letter-spacing: -0.03em;
    }

    .lead {
      font-size: 18px;
      line-height: 1.75;     /* Jason paragraph breathes */
      max-width: 74ch;
      margin: 0 0 18px;
    }

    .sub {
      color: rgb(var(--muted));
      max-width: 74ch;
      margin: 0;
      line-height: 1.75;
    }

    /* Social row sits lower in Jason’s hero */

    /* Hero link row (Jason-style) */
    .socialRow {
      display: flex;
      align-items: center;
      gap: 14px;
      margin-top: 28px;
      flex-wrap: wrap;
      color: rgb(var(--muted));
    }
    .social {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
      color: rgb(var(--muted));
      padding: 6px 2px;
    }
    .social:hover { color: rgb(var(--accent)); }
    .icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 26px;
      height: 26px;
      border: 1px solid rgb(var(--border));
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.02);
    }
    .sep { color: rgb(var(--border)); }
    .more { color: rgb(var(--muted)); }
    .more:hover { color: rgb(var(--accent)); }

    /* SECTIONS */
    .block { margin-top: 96px; }
    .block h2 {
      margin: 0 0 12px;
      font-size: 28px;
      letter-spacing: -0.02em;
    }

    .block .muted {
      margin: 0 0 22px;
    }

    .muted { color: rgb(var(--muted)); }

    /* Featured projects grid */
    .grid { display: grid; gap: 18px; grid-template-columns: 1fr; }
    @media (min-width: 860px) { .grid { grid-template-columns: repeat(3, minmax(0, 1fr)); } }

    .card {
      text-decoration: none;
      border: 1px solid rgb(var(--border));
      border-radius: var(--r);
      padding: 18px 18px 16px;
      background: rgba(255, 255, 255, 0.02);
      transition: transform 120ms ease, border-color 120ms ease;
      color: rgb(var(--text));
    }
    .card:hover { transform: translateY(-2px); border-color: rgb(var(--accent)); }
    .card h3 { margin: 0 0 8px; }
    .meta { display: flex; justify-content: space-between; gap: 10px; margin-top: 12px; }
    .pill { color: rgb(var(--accent)); font-size: 13px; }
    .tech { color: rgb(var(--muted)); font-size: 12px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

    .allProjects { margin-top: 12px; }
    .allProjects a { color: rgb(var(--accent)); text-decoration: none; }
    .allProjects a:hover { text-decoration: underline; }

    /* Timeline */
    .timeline { margin-top: 18px; }
    .item { display: grid; grid-template-columns: 170px 1fr; gap: 16px; padding: 12px 0; }
    .when { color: rgb(var(--muted)); font-size: 13px; }
    .what h3 { margin: 0 0 4px; font-size: 16px; }
    .divider { height: 1px; background: rgb(var(--border)); margin: 10px 0; opacity: 0.9; }

    /* Skills */
    .skills { display: grid; grid-template-columns: 1fr; gap: 16px; margin-top: 16px; }
    @media (min-width: 860px) { .skills { grid-template-columns: 1fr 1fr; } }
    .s {
      border: 1px solid rgb(var(--border));
      border-radius: var(--r);
      padding: 14px;
      background: rgba(255, 255, 255, 0.02);
    }
    .s h3 { margin: 0 0 10px; font-size: 15px; }
    ul { margin: 0; padding-left: 18px; color: rgb(var(--muted)); }
    li { margin: 6px 0; }

    /* Contact buttons (kept) */
    .cta { display: flex; gap: 12px; margin-top: 16px; flex-wrap: wrap; }
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 14px;
      border-radius: 12px;
      background: rgb(var(--accent));
      color: white;
      text-decoration: none;
      border: 1px solid rgba(255, 255, 255, 0.08);
    }
    .btn.ghost {
      background: rgba(255, 255, 255, 0.02);
      color: rgb(var(--text));
      border: 1px solid rgb(var(--border));
    }
    .btn.ghost:hover { border-color: rgb(var(--accent)); }
  </style>
</SiteLayout>