---
import SiteLayout from "../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";

const projects = (await getCollection("projects"))
  .filter(p => p.data.featured)
  .slice(0, 3);
---
<SiteLayout title="Alan Palayil — Enterprise Data Engineer" description="Enterprise data + platform modernization in financial systems.">
  <section class="hero">
    <p class="kicker">Enterprise Data Engineer • Financial Systems • Cloud Platforms</p>
    <h1>Hello! I’m Alan Palayil.</h1>
    <p class="lead">
      I’m an <strong>Application Development Analyst</strong> at <strong>Genworth Financial</strong>, modernizing
      <strong> investment accounting systems</strong> by building reliable <strong>Azure-based data pipelines</strong>,
      improving operational resilience, and enabling cloud transformation at scale.
    </p>
    <p class="sub">
      Open to conversations on enterprise cloud migration, financial systems modernization, and large-scale data workflows.
    </p>
    <div class="cta">
      <a class="btn" href="/projects">View Projects</a>
      <a class="btn ghost" href="/resume">Resume</a>
    </div>
  </section>

  <section class="block">
    <h2>Featured Projects</h2>
    <p class="muted">Selected work with production ownership and measurable impact.</p>

    <div class="grid">
      {projects.map(p => (
        <a class="card" href={`/projects/${p.slug}`}>
          <h3>{p.data.title}</h3>
          <p class="muted">{p.data.summary}</p>
          <div class="meta">
            <span class="pill">Read case study →</span>
            <span class="tech">{p.data.tech.slice(0,4).join(" · ")}</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="block">
    <h2>Work & Education</h2>
    <div class="timeline">
      <div class="item">
        <div class="when">Dec 2025 – Present</div>
        <div class="what">
          <h3>Application Development Analyst (P2) — Genworth Financial</h3>
          <p class="muted">Platform ownership, cloud modernization, data workflows across fixed income, CML, and derivatives.</p>
        </div>
      </div>
      <div class="item">
        <div class="when">Jul 2023 – Dec 2025</div>
        <div class="what">
          <h3>Associate Application Development Analyst (P1) — Genworth Financial</h3>
          <p class="muted">Automations, reporting, interfaces, and production support for investment accounting platforms.</p>
        </div>
      </div>

      <div class="divider"></div>

      <div class="item">
        <div class="when">PhD (in progress)</div>
        <div class="what">
          <h3>PhD in Information Technology — AI & Data Science focus</h3>
          <p class="muted">Applied research interests in intelligent automation and data-driven systems.</p>
        </div>
      </div>
      <div class="item">
        <div class="when">2023</div>
        <div class="what">
          <h3>M.S. Cybersecurity Engineering — Illinois Institute of Technology</h3>
        </div>
      </div>
      <div class="item">
        <div class="when">2023</div>
        <div class="what">
          <h3>B.S. Computer & Cybersecurity Engineering — Illinois Institute of Technology</h3>
        </div>
      </div>
    </div>
  </section>

  <section class="block">
    <h2>Technical Skills</h2>
    <div class="skills">
      <div class="s">
        <h3>Data Engineering & Pipelines</h3>
        <ul>
          <li>ETL pipeline design and orchestration</li>
          <li>Data transformation, validation, and reconciliation</li>
          <li>Accounting message generation and journal workflows</li>
          <li>Daily batch processing in regulated environments</li>
        </ul>
      </div>
      <div class="s">
        <h3>Cloud & Data Platforms</h3>
        <ul>
          <li>Azure Synapse Analytics (dedicated & serverless)</li>
          <li>Azure monitoring for reliability and operations</li>
          <li>PostgreSQL and relational data modeling</li>
          <li>Enterprise scheduling and job orchestration</li>
        </ul>
      </div>
      <div class="s">
        <h3>Languages & Tooling</h3>
        <ul>
          <li>Python (processing, automation, validation)</li>
          <li>SQL (reconciliation, performance tuning)</li>
          <li>Git (collaboration, version control)</li>
        </ul>
      </div>
      <div class="s">
        <h3>Enterprise Systems & Integration</h3>
        <ul>
          <li>PAM accounting platforms</li>
          <li>Markit EDM and enterprise ETL workflows</li>
          <li>AppWorx scheduling and dependency management</li>
          <li>Vendor migrations and platform ownership</li>
        </ul>
      </div>
    </div>
  </section>

  <section class="block">
    <h2>Contact</h2>
    <p class="muted">Email and LinkedIn are the fastest ways to reach me.</p>
    <div class="cta">
      <a class="btn" href="mailto:YOUR_EMAIL_HERE">Email</a>
      <a class="btn ghost" href="https://www.linkedin.com/in/YOUR_LINKEDIN/" target="_blank">LinkedIn</a>
    </div>
  </section>

  <style>
    .kicker { color: rgb(var(--muted)); margin: 0 0 10px; }
    .hero h1 { margin: 0 0 12px; font-size: 44px; line-height: 1.08; }
    .lead { font-size: 18px; color: rgb(var(--text)); max-width: 72ch; }
    .sub { color: rgb(var(--muted)); max-width: 72ch; }
    .cta { display:flex; gap:12px; margin-top: 16px; flex-wrap:wrap; }

    .btn {
      display:inline-flex; align-items:center; justify-content:center;
      padding: 10px 14px;
      border-radius: 12px;
      background: rgb(var(--accent));
      color: white; text-decoration:none;
      border: 1px solid rgba(255,255,255,0.08);
    }
    .btn.ghost {
      background: rgba(255,255,255,0.02);
      color: rgb(var(--text));
      border: 1px solid rgb(var(--border));
    }
    .btn.ghost:hover { border-color: rgb(var(--accent)); }

    .block { margin-top: 46px; }
    .muted { color: rgb(var(--muted)); }
    .grid { display:grid; gap: 14px; grid-template-columns: repeat(1, minmax(0,1fr)); }
    @media (min-width: 860px) { .grid { grid-template-columns: repeat(3, minmax(0,1fr)); } }

    .card {
      text-decoration:none;
      border: 1px solid rgb(var(--border));
      border-radius: var(--r);
      padding: 14px 14px 12px;
      background: rgba(255,255,255,0.02);
      transition: transform 120ms ease, border-color 120ms ease;
      color: rgb(var(--text));
    }
    .card:hover { transform: translateY(-2px); border-color: rgb(var(--accent)); }
    .card h3 { margin: 0 0 8px; }
    .meta { display:flex; justify-content:space-between; gap:10px; margin-top: 12px; }
    .pill { color: rgb(var(--accent)); font-size: 13px; }
    .tech { color: rgb(var(--muted)); font-size: 12px; white-space: nowrap; overflow:hidden; text-overflow: ellipsis; }

    .timeline { margin-top: 18px; }
    .item { display:grid; grid-template-columns: 170px 1fr; gap: 16px; padding: 12px 0; }
    .when { color: rgb(var(--muted)); font-size: 13px; }
    .what h3 { margin: 0 0 4px; font-size: 16px; }
    .divider { height: 1px; background: rgb(var(--border)); margin: 10px 0; opacity: 0.9; }

    .skills { display:grid; grid-template-columns: 1fr; gap: 16px; margin-top: 16px; }
    @media (min-width: 860px) { .skills { grid-template-columns: 1fr 1fr; } }
    .s {
      border: 1px solid rgb(var(--border));
      border-radius: var(--r);
      padding: 14px;
      background: rgba(255,255,255,0.02);
    }
    .s h3 { margin: 0 0 10px; font-size: 15px; }
    ul { margin: 0; padding-left: 18px; color: rgb(var(--muted)); }
    li { margin: 6px 0; }
  </style>
</SiteLayout>
