---
const { title = "Alan Palayil", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body>
    <div class="container">
      <header class="header">
        <a class="brand" href="/">Alan Palayil</a>

        <nav class="nav">
          <a href="/about">Aboute</a>
          <a href="/projects">Projects</a>
          <a href="/experience">Experience</a>
          <a href="/resume">Resume</a>
          <a href="/contact">Contact</a>
        </nav>
      </header>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <span>Â© {new Date().getFullYear()} Alan Palayil</span>
        <span class="footer-links">
          <a href="https://www.linkedin.com/in/alan-palayil/" target="_blank" rel="noreferrer">LinkedIn</a>
          <a href="https://github.com/AlanP13" target="_blank" rel="noreferrer">GitHub</a>
