<style>
  :global(:root) {
    --bg: #0b0f17;
    --card: #101827;
    --text: #e8eefc;
    --muted: #a7b3cc;
    --border: rgba(255,255,255,0.10);
    --accent: #8ab4ff;
  }
  :global(html[data-bgfx="on"] body::before) {
    content: "";
    position: fixed;
    inset: -20%;
    pointer-events: none;
    background: radial-gradient(circle at 20% 20%, rgba(138,180,255,0.18), transparent 45%),
                radial-gradient(circle at 80% 30%, rgba(203,166,247,0.16), transparent 45%),
                radial-gradient(circle at 50% 80%, rgba(245,169,127,0.10), transparent 45%);
    filter: blur(18px);
    opacity: 0.9;
    z-index: -1;
  }
  body { margin: 0; background: var(--bg); color: var(--text); font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
  a { color: inherit; text-decoration: none; }
  a:hover { opacity: 0.9; }

  .container { max-width: 1050px; margin: 0 auto; padding: 24px 18px; }
  .header { display:flex; align-items:center; justify-content:space-between; gap:16px; padding: 10px 0 18px; border-bottom: 1px solid var(--border); }
  .brand { font-weight: 700; letter-spacing: 0.2px; }
  .nav { display:flex; gap:14px; flex-wrap: wrap; color: var(--muted); }
  .nav a { padding: 6px 10px; border: 1px solid transparent; border-radius: 999px; }
  .nav a:hover { border-color: var(--border); color: var(--text); }

  .main { padding: 26px 0; }
  .footer { display:flex; justify-content:space-between; gap:12px; padding: 18px 0 10px; border-top: 1px solid var(--border); color: var(--muted); font-size: 14px; flex-wrap: wrap; }
  .footer-links { display:flex; gap: 12px; }
</style>
